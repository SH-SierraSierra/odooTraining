<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="task_view_form">
            <field name="name">coop.task.form</field>
            <field name="model">coop.task</field>
            <field name="arch" type="xml">
                <form string="Task Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="start_time"/>
                                <field name="stop_time"/>
                            </group>
                            <group>
                                <field name="leader"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Volunteers">
                                <field name="volunteers"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="task_view_list">
            <field name="name">coop.task.list</field>
            <field name="model">coop.task</field>
            <field name="arch" type="xml">
                <tree string="Task List">
                    <field name="name"/>
                    <field name="task_type"/>                    
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="task_view_search">
            <field name="name">coop.task.search</field>
            <field name="model">coop.task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="task_view_gantt">
            <field name="name">coop.task.gantt</field>
            <field name="model">coop.task</field>
            <field name="arch" type="xml">
                <gantt date_start="start_time" date_stop="end_time" default_group_by="leader">
                </gantt>
            </field>
        </record>
    </data> 
</odoo>